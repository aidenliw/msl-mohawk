@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

@if (ViewData["EmailUnconfirmed"] != null)
{
    <form method="post" asp-controller="Home" asp-action="ResendConfirmation">
        <input type="hidden" name="email" value="@ViewData["UserEmail"]" />
        <div class="alert alert-primary">
            You can't log in until you confirm your email address.
            <button type="submit" class="btn btn-success m-1 ml-2">Resend confirmation email.</button>
        </div>
    </form>
}
else if (ViewData["ResentSuccess"] != null)
{
    bool resentSuccess = (bool)ViewData["ResentSuccess"];
    if (resentSuccess)
    {
        <div class="alert alert-primary">
            Success! Check your email for the new confirmation email.
        </div>
    }
    else
    {
        <form asp-action="ResendConfirmation" asp-email="@ViewData["UserEmail"]">
            <div class="alert alert-primary">
                Unexpected error. Try again in a few moments.
                <button type="submit" class="btn btn-success m-1 ml-2">Resend confirmation email.</button>
            </div>
        </form>
    }
}


<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
